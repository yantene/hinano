{
  "name": "uchiwa",
  "version": "0.1.0",
  "private": true,
  "keywords": [],
  "author": "@yantene, @cflatech and @sumogri",
  "license": "MIT",
  "scripts": {
    "start": "node ./bin/www",

    "build": "npm run build:front && npm run build:back",
    "build:front": "webpack --config ./frontend/webpack.prod.js",
    "build:back": "tsc --build ./backend/tsconfig.json",

    "dev": "npm run dev:front & npm run dev:back",
    "dev:front": "webpack --watch --config ./frontend/webpack.dev.js",
    "dev:back": "rm -rf ./dist/app && set DEBUG=express-typescript:* & tsc-watch --build ./backend/tsconfig.json --noClear --onSuccess \"npm start\"",

    "lint": "npm run lint:front && npm run lint:back",
    "lint:front": "eslint --config ./frontend/.eslintrc.yaml \"./frontend/**/*.ts\"",
    "lint:back": "eslint --config ./backend/.eslintrc.yaml \"./backend/**/*.ts\"",

    "lint:fix": "npm run lint:fix:front && npm run lint:fix:back",
    "lint:fix:front": "npm run lint:fix:front:eslint && npm run lint:fix:front:prettier",
    "lint:fix:front:eslint": "eslint --config ./frontend/.eslintrc.yaml --fix \"./frontend/**/*.ts\"",
    "lint:fix:front:prettier": "prettier --write \"./frontend/**/*.ts\"",
    "lint:fix:back": "npm run lint:fix:back:eslint && npm run lint:fix:back:prettier",
    "lint:fix:back:eslint": "eslint --config ./backend/.eslintrc.yaml --fix \"./backend/**/*.ts\"",
    "lint:fix:back:prettier": "prettier --write \"./backend/**/*.ts\"",

    "test": "npm run test:front && npm run test:back",
    "test:front": "jest --config ./frontend/jest.config.js",
    "test:back": "jest --config ./backend/jest.config.js"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "phaser": "^3.52.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-jest": "^24.1.5",
    "expose-loader": "^2.0.0",
    "html-webpack-plugin": "^5.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.5",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
