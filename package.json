{
  "name": "siggre",
  "version": "0.1.0",
  "license": "MIT",
  "contributors": [
    {
      "name": "yantene"
    },
    {
      "name": "sumogri"
    },
    {
      "name": "cflatech"
    }
  ],
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "run-p build:*",
    "build:frontend": "npm run --prefix frontend build",
    "build:backend": "tsc --build ./tsconfig.json",
    "dev": "run-p dev:*",
    "dev:frontend": "npm run --prefix frontend dev:watch",
    "dev:backend": "rm -rf ./dist/app ./dist/server.js && set DEBUG=express-typescript:* & tsc-watch --build ./tsconfig.json --noClear --onSuccess \"npm start\"",
    "lint": "run-s lint:*",
    "lint:frontend": "npm run --prefix frontend lint",
    "lint:backend": "eslint --config ./.eslintrc.yaml \"./**/*.ts\"",
    "format": "run-p format:frontend format:backend",
    "format:frontend": "npm run --prefix frontend format",
    "format:backend": "run-p format:backend:*",
    "format:backend:eslint": "eslint --config ./.eslintrc.yaml --fix \"./**/*.ts\"",
    "format:backend:prettier": "prettier --write \"./**/*.ts\"",
    "test": "run-s test:*",
    "test:frontend": "npm run --prefix frontend test",
    "test:backend": "jest --config ./jest.config.js"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mini-css-extract-plugin": "^1.3.9",
    "morgan": "~1.9.1",
    "phaser": "^3.52.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.1.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-jest": "^24.1.5",
    "expose-loader": "^2.0.0",
    "html-webpack-plugin": "^5.1.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.5",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  }
}
