{
  "compilerOptions": {
    "incremental": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": false,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist"
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
